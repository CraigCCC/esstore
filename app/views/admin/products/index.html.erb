<h1>
  書本列表
  <%= link_to '新增', new_admin_product_path%>
</h1>

<table>
  <thead>
    <tr>
      <th scope='col'>商品名稱</th>
      <th scope='col'>商品圖</th>
      <th scope='col'><%= sortable "list_price" %></th>
      <th scope='col'><%= sortable "sell_price" %></th>
      <th scope='col'><%= sortable "quantity" %></th>
      <th scope='col'></th>
      <th scope='col'></th>
      <th scope='col'></th>
    </tr>
  </thead>
  <% @products.with_attached_images.each do |product| %>
    <tbody>
      <td><%= product.name %></td>
      <td><%= cover_image_tag(product, 100, 100) %></td>
      <td><%= product.list_price %></td>
      <td><%= product.sell_price %></td>
      <td><%= product.quantity %></td>
      <td><%= link_to '查看', admin_product_path(product) %></td>
      <td><%= link_to '編輯', edit_admin_product_path(product) %></td>
      <td><%= link_to '刪除', admin_product_path(product), method: :delete, data: { confirm: '確定要刪除' } %></td>
    </tbody>
  <% end %>
</table>
